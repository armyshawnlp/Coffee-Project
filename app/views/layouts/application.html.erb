<!DOCTYPE html>
<html>
  <head>
    <title>Coffee_Project</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <script type="text/javascript">
      function changecolor(color){
          document.getElementsByTagName('body')[0].style.
              backgroundColor=color.value;
      }
    </script>

    <div class="one">
      <img src="https://png.pngtree.com/element_origin_min_pic/16/09/23/1257e4b57685460.jpg" align="left" width="100px" height="100" border="2px">
      <center><h1>Coffee Ordering System</h1></center>
      <!--<%= image_tag 'coffee_cup.jpg', alt: '4 R.I.L.S' %>-->

    </div>
    <div class="two">
      <ul><center>
        <li><b><%= link_to "New Order", new_order_path%></b></li>
        <li><b><%= link_to "Review Orders", orders_path%></b></li>
        <li><b><%= link_to "Menu", products_path%></b></li>
        <li class="login"><b><%= link_to 'Login', login_path, method: :create %></b></li>
      </center>
      </ul></div>

    <% if session[:user_id] %>
      <nav class="logged_in_nav">
        <ul>
          <li><b><%= link_to "Order Products", order_products_path%></b></li>
          <li><b><%= link_to "Employees", employees_path%></b></li>
          <li><b><%= link_to "Sales", sales_path%></b></li>
          <li><b><%= link_to 'Users', users_path %></b></li>
          <li class="home"><b><%= link_to "Home", admin_path %></b></li>
          <!--<li class="logout"><b><%= link_to 'Logout', logout_path, method: :delete %></b></li>-->
        </ul>
      </nav>
    <% end %>
    </nav>

    <style>
      .one {
        background-color: #FFD700;
        border-style: solid;
        border-width: 3px;
      }
      .two {
        background-color: #173e43;
        border-style: solid;
        border-width: 3px;
      }

      .login {
        background-color: #C0C0C0;
        text-color: white;
      }

      .logged_in_nav {
        background-color: #173e43;
        border-style: solid;
        border-width: 3px;
      }

      .logout {
        background-color: #C0C0C0;
        text-color: white;
      }

      .home {
        background-color: #FFDEAD;
        text-color: white;
      }

      body {background-color: #87CEFA;
      }

      /*---Link---*/

      ul {
        list-style-type: none;
        margin: 0px;
        padding: 0;
        overflow: hidden;
        background-color: #F0F8FF;
      }

      li {
        display: inline-block;
        float: left;
        list-style-type: square;
      }

      li a {
        display: block;
        color: white;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
      }

      li a:hover {
        font-weight: bold;
        color: white;
        background-color: #0000FF;
      }

      a:hover {
        font-weight: bold;
        background-color: #0000FF;
      }


      a:link {
        text-decoration:none;
      }


    </style>
  </head>

  <body>
    <%= yield %>

<br><br><br><br>
    <div>
      <select size="1" onchange="changecolor(this);" align="right">
        <option value="select">Select a Color</option>
        <option value="red">Red</option>
        <option value="#87CEFA">Blue</option>
        <option value="yellow">Yellow</option>
        <option value="#00FF7F">Green</option>
        <option value="#9370DB">Purple</option>
      </select>
    </div>
  </body>
</html>
